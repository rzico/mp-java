<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ehcache [
		<!ELEMENT ehcache (diskStore|cache)*>
		<!ATTLIST ehcache
				xmlns:xsi CDATA #REQUIRED
				xsi:noNamespaceSchemaLocation CDATA #REQUIRED>
		<!ELEMENT diskStore (#PCDATA)>
		<!ATTLIST diskStore
				path CDATA #REQUIRED>
		<!ELEMENT cache (#PCDATA)>
		<!ATTLIST cache
				eternal CDATA #REQUIRED
				maxElementsInMemory CDATA #REQUIRED
				name CDATA #REQUIRED
				overflowToDisk CDATA #REQUIRED
				timeToIdleSeconds CDATA #IMPLIED
				timeToLiveSeconds CDATA #IMPLIED>
		]>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd">

	<diskStore path="${java.io.tmpdir}/${system.project_name}/cache" />

	<cache name="logConfig" maxElementsInMemory="100" eternal="true" overflowToDisk="true" />
	<cache name="setting" maxElementsInMemory="100" eternal="true" overflowToDisk="true" />
	<cache name="redis" maxElementsInMemory="500" timeToLiveSeconds="3600" eternal="false" overflowToDisk="false" />
	<cache name="authorization" maxElementsInMemory="100" timeToLiveSeconds="3600" eternal="false" overflowToDisk="false" />
	<cache name="articleCategory" maxElementsInMemory="500" timeToIdleSeconds="3600" timeToLiveSeconds="86400" eternal="false" overflowToDisk="true" />
	<cache name="tag" maxElementsInMemory="500" timeToIdleSeconds="3600" timeToLiveSeconds="86400" eternal="false" overflowToDisk="true" />
	<cache name="role" maxElementsInMemory="500" timeToIdleSeconds="3600" timeToLiveSeconds="86400" eternal="false" overflowToDisk="true" />
	<cache name="area" maxElementsInMemory="500" timeToIdleSeconds="3600" timeToLiveSeconds="86400" eternal="false" overflowToDisk="true" />
	<cache name="admin" maxElementsInMemory="500" timeToIdleSeconds="3600" timeToLiveSeconds="86400" eternal="false" overflowToDisk="true" />

</ehcache>